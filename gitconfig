[alias]
  ps = push
  cm = commit
  pl = pull
  wip = commit --no-verify -am 'wip'
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  co = checkout
  st = status -s
  ri = rebase -i
  ca = commit -a
  cam = commit --amend
  camno = commit --amend --no-edit
  pom = push origin master
  pog = push origin gh-pages
  prom = pull --rebase origin master
  prog = pull --rebase origin gh-pages
  log-file = log -p -M --follow --stat --
  rp = rev-parse
[core]
	excludesfile = /Users/andrew/.globalgitignore
	editor = nvim
	autocrlf = input
  # pager = "diff-highlight | diff-so-fancy | less --tabs=1,5 -R"
[mergetool "nvim"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
# set "nvim" as tool for merging
[merge]
  tool = nvim
# automatically launch merge tool without displaying a prompt
[mergetool]
  prompt = false
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[color]
  ui = true
[web]
	browser = open
[push]
	default = current
[rebase]
	autoStash = true
[pull]
	default = current
	rebase = true
[github]
	user = ajoslin
[init]
	defaultBranch = master

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true

[interactive]
    diffFilter = delta --color-only

[includeIf "gitdir:~/dev/"]
    path = .gitconfig-personal
[includeIf "gitdir:~/pm/"]
    path = .gitconfig-pm

